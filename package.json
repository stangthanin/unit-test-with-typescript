{
  "name": "unit-test-with-typescript",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stangthanin/unit-test-with-typescript.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/stangthanin/unit-test-with-typescript/issues"
  },
  "homepage": "https://github.com/stangthanin/unit-test-with-typescript#readme",
  "devDependencies": {
    "jest": "^28.1.1",
    "typescript": "^4.7.3"
  },
  "dependencies": {
    "@types/jest": "^28.1.1",
    "ts-jest": "^28.0.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./",
    "modulePaths": [
      "<rootDir>"
    ],
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "testEnvironment": "node",
    "coverageReporters": [
      "text",
      "html"
    ],
    "coverageDirectory": "<rootDir>/coverage/",
    "verbose": true
  }
}
